{
  "name": "TAVI vs SAVR Tool Trial",
  "description": "",
  "inputs": [
    {
      "id": "what_is_the_patient_s_age",
      "label": "What is the patient's age?",
      "type": "number",
      "options": []
    },
    {
      "id": "what_is_the_sts_prom_euroscore_ii_score",
      "label": "What is the STS-PROM/EuroSCORE II score?",
      "type": "number",
      "options": []
    },
    {
      "id": "is_the_patient_chest_anatomy_suitable_for_surgery",
      "label": "Is the patient chest anatomy suitable for surgery?",
      "type": "select",
      "options": [
        "Yes",
        "No",
        "Unknown"
      ]
    },
    {
      "id": "is_the_femoral_accessible",
      "label": "Is the femoral accessible?",
      "type": "select",
      "options": [
        "Yes",
        "No",
        "Unknown"
      ]
    },
    {
      "id": "is_the_patient_hemodynamically_unstable",
      "label": "Is the patient hemodynamically unstable?",
      "type": "select",
      "options": [
        "Yes",
        "No",
        "Unknown"
      ]
    },
    {
      "id": "does_the_patient_require_urgent_high_risk_non_cardiac_surgery_for_severe_aortic_stenosis",
      "label": "Does the patient require urgent high-risk non-cardiac surgery for severe aortic stenosis?",
      "type": "select",
      "options": [
        "Yes",
        "No",
        "Unknown"
      ]
    }
  ],
  "scoring_rules": [],
  "rules": [
    {
      "name": "SAVR Recommended (Young, Low Risk - Class I, Level B)",
      "level": "success",
      "message": "SAVR is recommended for younger, low-risk patients (Class I, Level B).",
      "condition_operator": "AND",
      "conditions": [
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": "<75",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_sts_prom_euroscore_ii_score",
          "op": "equals",
          "value": "<4",
          "join_with_previous": "AND"
        }
      ]
    },
    {
      "name": "SAVR Recommended (Operable, Unsuitable TF TAVI - Class I, Level B)",
      "level": "success",
      "message": "SAVR is recommended for operable patients unsuitable for transfemoral TAVI (Class I, Level B).",
      "condition_operator": "AND",
      "conditions": [
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": "Yes",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": "No",
          "join_with_previous": "AND"
        }
      ]
    },
    {
      "name": "TAVI Recommended (Class I, Level A)",
      "level": "success",
      "message": "TAVI is recommended (Class I, Level A).",
      "condition_operator": "OR",
      "conditions": [
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": ">=75",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_sts_prom_euroscore_ii_score",
          "op": "equals",
          "value": ">8",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": "No",
          "join_with_previous": "AND"
        }
      ]
    },
    {
      "name": "SAVR or TAVI Recommended (Intermediate Risk - Class I, Level B)",
      "level": "info",
      "message": "SAVR or TAVI are recommended according to individual clinical, anatomical, and procedural characteristics, requiring Heart Team assessment (Class I, Level B). Needs discussion in MDT",
      "condition_operator": "AND",
      "conditions": [
        {
          "input_id": "what_is_the_patient_s_age",
          "op": "equals",
          "value": "<75",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_sts_prom_euroscore_ii_score",
          "op": "equals",
          "value": ">=4 AND <=8",
          "join_with_previous": "AND"
        },
        {
          "input_id": "what_is_the_sts_prom_euroscore_ii_score",
          "op": "equals",
          "value": ">=8",
          "join_with_previous": "AND"
        }
      ]
    },
    {
      "name": "Non-transfemoral TAVI Considered (Class IIb, Level C)",
      "level": "info",
      "message": "Non-transfemoral TAVI may be considered (Class IIb, Level C).",
      "condition_operator": "AND",
      "conditions": [
        {
          "input_id": "is_the_femoral_accessible",
          "op": "equals",
          "value": "No",
          "join_with_previous": "AND"
        },
        {
          "input_id": "is_the_patient_chest_anatomy_suitable_for_surgery",
          "op": "equals",
          "value": "No",
          "join_with_previous": "AND"
        }
      ]
    },
    {
      "name": "Balloon Aortic Valvotomy Considered (Class IIb, Level C)",
      "level": "info",
      "message": "Balloon aortic valvotomy may be considered as a bridge to SAVR or TAVI (Class IIb, Level C).",
      "condition_operator": "OR",
      "conditions": [
        {
          "input_id": "is_the_patient_hemodynamically_unstable",
          "op": "equals",
          "value": "Yes",
          "join_with_previous": "AND"
        },
        {
          "input_id": "does_the_patient_require_urgent_high_risk_non_cardiac_surgery_for_severe_aortic_stenosis",
          "op": "equals",
          "value": "Yes",
          "join_with_previous": "AND"
        }
      ]
    }
  ],
  "scoring_recommendations": [],
  "scoring_mode": "signed",
  "category": "Cardiac",
  "subcategory": "Aortic",
  "github_path": "calculators/Cardiac/Aortic/tavi_vs_savr_tool_trial.json"
}
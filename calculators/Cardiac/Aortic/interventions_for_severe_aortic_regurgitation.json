  "rules": [
    {
      "name": "Class I B: AV Surgery for Symptomatic Severe AR",
      "level": "info",
      "message": "Class I B: Aortic valve (AV) surgery is recommended in symptomatic patients with severe aortic regurgitation (AR), regardless of left ventricular (LV) function.",
      "conditions": [
        {
          "input_id": "is_the_patient_symptomatic",
          "op": "equals",
          "value": "Yes"
        },
        {
          "input_id": "does_the_patient_have_severe_aortic_regurgitation_ar",
          "op": "equals",
          "value": "Yes"
        }
      ]
    },
    {
      "name": "Class I B: AV Surgery for Asymptomatic Severe AR with LVESD >50mm",
      "level": "info",
      "message": "Class I B: Aortic valve (AV) surgery is recommended in asymptomatic patients with severe AR and LV end-systolic diameter (LVESD) >50 mm.",
      "conditions": [
        {
          "input_id": "is_the_patient_symptomatic",
          "op": "equals",
          "value": "No"
        },
        {
          "input_id": "does_the_patient_have_severe_aortic_regurgitation_ar",
          "op": "equals",
          "value": "Yes"
        },
        {
          "input_id": "what_is_the_lv_end_systolic_diameter_lvesd_in_mm",
          "op": "equals",
          "value": ">50"
        }
      ]
    },
    {
      "name": "Class I B: AV Surgery for Asymptomatic Severe AR with LVESDi >25mm/m\u00b2",
      "level": "info",
      "message": "Class I B: Aortic valve (AV) surgery is recommended in asymptomatic patients with severe AR and LVESD index (LVESDi) >25 mm/m\u00b2 (especially in patients with small body size, BSA <1.68 m\u00b2).",
      "conditions": [
        {
          "input_id": "is_the_patient_symptomatic",
